startup_message off
defscrollback 100000
# shelltitle ''

# allow rtorrent keys
defflow off

# status line at bottom
hardstatus alwayslastline
hardstatus  string '%{=b k4}[ %{-b w}%H %{+b k4}][%=%{-b kw}%?%-w%?%{+b k4}(%{W}%n %t%{+b k4})%{-b w}%?%+w%?%=%{+b k4}][%{B} %m.%d %{W}%c %{+b k4}]'

# escape key
escape ^aa

term screen
termcapinfo xterm* ti@:te@

