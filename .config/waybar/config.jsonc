// -*- mode: jsonc -*-
{
    "layer": "top", // Waybar at top layer
    "output": "!HDMI-A-1", // Output to display Waybar
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    "height": 30,
    "spacing": 0, 
    // Modules
    "modules-left": [
        "hyprland/workspaces",
        "custom/media"
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
        "memory",
        "cpu",
        "temperature#cpu",
        "temperature#gpu",
        "temperature#water",
        "cava",
        "pulseaudio",
        "network",
        "custom/pacman",
        "tray",
        "battery",
        "clock"
    ],
    //Modules configuration
    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "warp-on-scroll": false,
        "format": "{name}: {icon}",
        "format-icons": {
            "urgent": "ïª",
            "focused": "ï†’",
            "default": "ï„‘"
        }
    },
    "custom/pacman": {
      "format": "{icon}{}",
      "return-type": "json",
      "format-icons": {
        "pending-updates": "ï€™ ",
        "updated": ""
      },
      "exec-if": "which waybar-updates",
      "exec": "waybar-updates"
    },
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ï€£",
            "unlocked": "ï‚œ"
