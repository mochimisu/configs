// -*- mode: jsonc -*-
{
    "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    "height": 30,
    "spacing": 0, 
    // Modules
    "modules-left": [
        "hyprland/workspaces",
        "custom/media",
        "hyprland/window"
    ],
    "modules-center": [
    ],
    "modules-right": [
        "memory",
        "cpu",
        "temperature#cpu",
        "cava",
        "pulseaudio",
        "network",
        "custom/pacman",
        "tray",
        "custom/wattage",
        "battery",
        "clock"
    ],
    //Modules configuration
    "hyprland/window": {
        "max-length": 50
    },
    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "warp-on-scroll": false,
        "format": "{name}: {icon}",
        "format-icons": {
            "urgent": "ÔÅ™",
            "focused": "ÔÜí",
            "default": "ÔÑë"
        }
    },
    "custom/pacman": {
      "format": "{icon} {}",
      "return-type": "json",
      "format-icons": {
        "pending-updates": "ÔÄô ",
        "updated": ""
      },
      "exec-if": "which waybar-updates",
      "exec": "waybar-updates"
    },
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },
    "tray": {
        "spacing": 10
    },
    "clock": {
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format": "{:%I:%M %p}"
    },
    "cava": {
        "framerate": 60,
        "autosens": 1,
        "bars": 6,
        "lower_cutoff_freq": 1,
        "higher_cutoff_freq": 10000,
        "method": "pulse",
        "source": "auto",
        "stereo": true,
        "reverse": false,
        "bar_delimiter": 0,
        "monstercat": true,
        "waves": false,
        "noise_reduction": 0.1,
        "input_delay": 0,
        "format-icons" : ["‚ñÅ", "‚ñÇ", "‚ñÉ", "‚ñÑ", "‚ñÖ", "‚ñÜ", "‚ñá", "‚ñà" ],
        "actions": {
                   "on-click-right": "mode"
                   }
    },
    "cpu": {
        "format": "{usage}%",
        "tooltip": false
    },
    "memory": {
        "format": "{}% ÔÉâ"
    },
    "temperature#cpu": {
        "hwmon-path-abs": "/sys/devices/pci0000:00/0000:00:08.1/0000:63:00.0/hwmon",
        "input-filename": "temp1_input",
        "critical-threshold": 80,
        "format-critical": "{temperatureC}¬∞C {icon}üî•",
        "format": "{temperatureC}¬∞C {icon}",
        "format-icons": ["Ôãõ"]
    },
    "network": {
        "format-wifi": "Ôá´",
        "format-ethernet": "üñß",
        "tooltip-format": "{ifname} via {gwaddr}",
        "format-linked": "(No IP)",
        "format-disconnected": "D/C ‚ö†",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon} {format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-muted": "Ôö© {format_source}",
        "format-source": "ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol"
    },
    "custom/wattage": {
        "exec": "echo $(( `cat /sys/devices/pci0000:00/0000:00:08.1/0000:63:00.0/hwmon/hwmon*/power1_input` / 1000000 ))",
        "format": "{} W",
        "interval": 5
    },
    "battery": {
        "interval": 60,
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-charging": "{capacity}% {icon}‚ö°",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    }
}
